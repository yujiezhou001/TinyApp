<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <title>Log in Page</title>
  </head>

  <body style="font-size:20px; padding:50px;">

    <% include partials/_header %>

    <h3>Login</h3>
    <form class="form-inline" action="/login" method="POST">
        Email:
        <input type="email" name="email" placeholder="Enter your email here" style="width: 300px; margin: 1em">
        Password:
        <input type="password" name="password" placeholder="Enter your password here" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </body>
</html>